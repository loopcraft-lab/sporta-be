generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  email       String
  name        String  @db.VarChar(500)
  password    String  @db.VarChar(500)
  phoneNumber String  @db.VarChar(50)
  avatar      String? @db.VarChar(1000)

  totpSecret         String?        @db.VarChar(1000)
  status             UserStatus     @default(ACTIVE)
  roleId             Int
  role               Role           @relation(fields: [roleId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  refreshTokens      RefreshToken[]
  sports             SportProfile[]
  createdPermissions Permission[]   @relation("PermissionCreatedBy")
  updatedPermissions Permission[]   @relation("PermissionUpdatedBy")
  deletedPermissions Permission[]   @relation("PermissionDeletedBy")
  createdRoles       Role[]         @relation("RoleCreatedBy")
  updatedRoles       Role[]         @relation("RoleUpdatedBy")
  deletedRoles       Role[]         @relation("RoleDeletedBy")

  createdById  Int?
  createdBy    User?  @relation("CreatorUsers", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  createdUsers User[] @relation("CreatorUsers")

  updatedById        Int?
  updatedBy          User?        @relation("UpdatorUsers", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedUsers       User[]       @relation("UpdatorUsers")
  deletedById        Int?
  deletedBy          User?        @relation("DeletorUsers", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedUsers       User[]       @relation("DeletorUsers")
  business           VenueOwner?  @relation("VenueOwnerUser")
  approvedVenueOwner VenueOwner[] @relation("VenueOwnerApprovedBy")
  createdVenueOwner  VenueOwner[] @relation("VenueOwnerCreatedBy")
  updatedVenueOwner  VenueOwner[] @relation("VenueOwnerUpdatedBy")
  deletedVenueOwner  VenueOwner[] @relation("VenueOwnerDeletedBy")
  createdSport       Sport[]      @relation("SportCreatedBy")
  updatedSport       Sport[]      @relation("SportUpdatedBy")
  deletedSport       Sport[]      @relation("SportDeletedBy")
  createdProvince    Province[]   @relation("ProvinceCreatedBy")
  updatedProvince    Province[]   @relation("ProvinceUpdatedBy")
  deletedProvince    Province[]   @relation("ProvinceDeletedBy")
  createdWard        Ward[]       @relation("WardCreatedBy")
  updatedWard        Ward[]       @relation("WardUpdatedBy")
  deletedWard        Ward[]       @relation("WardDeletedBy")
  createdAmenity     Amenity[]    @relation("AmenityCreatedBy")
  updatedAmenity     Amenity[]    @relation("AmenityUpdatedBy")
  deletedAmenity     Amenity[]    @relation("AmenityDeletedBy")
  createdCourt       Court[]      @relation("CourtCreatedBy")
  updatedCourt       Court[]      @relation("CourtUpdatedBy")
  deletedCourt       Court[]      @relation("CourtDeletedBy")
  createdVenueImage  VenueImage[] @relation("VenueImageCreatedBy")
  updatedVenueImage  VenueImage[] @relation("VenueImageUpdatedBy")
  deletedVenueImage  VenueImage[] @relation("VenueImageDeletedBy")

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([deletedAt])
}

model RefreshToken {
  token     String   @unique @db.VarChar(1000)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}

model Permission {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(500)
  description String     @default("")
  path        String     @db.VarChar(1000)
  method      HTTPMethod
  module      String     @default("") @db.VarChar(500)
  roles       Role[]

  createdById Int?
  createdBy   User?     @relation("PermissionCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("PermissionUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("PermissionDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([deletedAt])
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @db.VarChar(500)
  description String       @default("")
  isActive    Boolean      @default(true)
  permissions Permission[]
  users       User[]

  createdById Int?
  createdBy   User?     @relation("RoleCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("RoleUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("RoleDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([deletedAt])
}

model Sport {
  id          Int            @id @default(autoincrement())
  name        String         @db.VarChar(500)
  description String?        @db.VarChar(1000)
  iconUrl     String?        @db.VarChar(1000)
  status      SportStatus    @default(INACTIVE)
  popularity  SportProfile[]

  createdById  Int?
  createdBy    User?       @relation("SportCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById  Int?
  updatedBy    User?       @relation("SportUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById  Int?
  deletedBy    User?       @relation("SportDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt    DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  VenueOwner   VenueOwner? @relation(fields: [venueOwnerId], references: [id])
  venueOwnerId Int?
  Court        Court[]

  @@index([deletedAt])
}

model SportProfile {
  id         Int        @id @default(autoincrement())
  userId     Int
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  sportId    Int
  sport      Sport      @relation(fields: [sportId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  skillLevel SkillLevel

  @@unique([userId, sportId])
}

model VenueOwner {
  id           Int                        @id @default(autoincrement())
  userId       Int                        @unique
  user         User                       @relation("VenueOwnerUser", fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  name         String                     @db.VarChar(500)
  license      String?                    @db.VarChar(500)
  bankName     String?                    @db.VarChar(500)
  bankNumber   String?                    @db.VarChar(500)
  address      String?                    @db.VarChar(1000)
  provinceId   Int?
  wardId       Int?
  verified     VenueOwnerVerificationType @default(PENDING)
  approvedById Int?
  approvedBy   User?                      @relation("VenueOwnerApprovedBy", fields: [approvedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  rejectReason String?                    @db.VarChar(1000)

  createdById Int?
  createdBy   User?     @relation("VenueOwnerCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("VenueOwnerUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("VenueOwnerDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Court       Court[]
  Sport       Sport[]

  @@index([deletedAt])
}

model Court {
  id           Int         @id @default(autoincrement())
  venueOwnerId Int
  venueOwner   VenueOwner  @relation(fields: [venueOwnerId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  sportId      Int
  sport        Sport       @relation(fields: [sportId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  name         String?     @db.VarChar(500)
  description  String?     @db.VarChar(1000)
  capacity     Int?        @default(0)
  surface      String?     @db.VarChar(500)
  indoor       Boolean?    @default(false)
  status       CourtStatus @default(INACTIVE)

  amenities CourtAmenity[]
  images    VenueImage[]

  createdById Int?
  createdBy   User?     @relation("CourtCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("CourtUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("CourtDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([deletedAt])
}

model Amenity {
  id          Int            @id @default(autoincrement())
  name        String         @db.VarChar(500)
  description String?        @db.VarChar(1000)
  imageUrl    String?        @db.VarChar(1000)
  isActive    Boolean        @default(true)
  courts      CourtAmenity[]

  createdById Int?
  createdBy   User?     @relation("AmenityCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("AmenityUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("AmenityDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([deletedAt])
}

model CourtAmenity {
  id        Int @id @default(autoincrement())
  courtId   Int
  amenityId Int

  court   Court   @relation(fields: [courtId], references: [id])
  amenity Amenity @relation(fields: [amenityId], references: [id])

  @@unique([courtId, amenityId])
}

model VenueImage {
  id      Int   @id @default(autoincrement())
  courtId Int
  court   Court @relation(fields: [courtId], references: [id])

  url     String
  caption String?
  order   Int     @default(0)

  createdById Int?
  createdBy   User?     @relation("VenueImageCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("VenueImageUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("VenueImageDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([deletedAt])
}

//location
model Province {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(500)
  code String @db.VarChar(10)

  createdById Int?
  createdBy   User?     @relation("ProvinceCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("ProvinceUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("ProvinceDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Ward        Ward[]

  @@index([deletedAt])
}

model Ward {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(500)
  code       String   @db.VarChar(10)
  provinceId Int
  province   Province @relation(fields: [provinceId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  createdById Int?
  createdBy   User?     @relation("WardCreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  updatedById Int?
  updatedBy   User?     @relation("WardUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedById Int?
  deletedBy   User?     @relation("WardDeletedBy", fields: [deletedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([deletedAt])
}

// Enums
enum HTTPMethod {
  GET
  POST
  PUT
  DELETE
  PATCH
  OPTIONS
  HEAD
}

enum UserStatus {
  ACTIVE
  BLOCKED
  INACTIVE
}

enum VerificationCodeType {
  REGISTER
  FORGOT_PASSWORD
  LOGIN
  DISABLE_2FA
  WITHDRAW_MONEY
}

enum VenueOwnerVerificationType {
  PENDING
  VERIFIED
  REJECTED
}

enum SportStatus {
  INACTIVE
  ACTIVE
}

enum CourtStatus {
  INACTIVE
  ACTIVE
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  PROFESSIONAL
}
